{
  "name": "novel-editor-monorepo",
  "private": true,
  "author": "Jeason",
  "description": "Novel Editor 是一个功能强大的小说编辑器，提供丰富的编辑功能和直观的用户界面。",
  "email": "xiaomiquan@aliyun.com",
  "version": "0.1.54",
  "license": "MIT",
  "homepage": "https://github.com/jeasoncc/novel-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeasoncc/novel-editor.git"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:prod": "NODE_ENV=production turbo run build:prod",
    "build:test": "NODE_ENV=development turbo run build:test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check": "turbo run check",
    "clean": "turbo run clean",
    "desktop:dev": "turbo run dev --filter=desktop",
    "web:dev": "turbo run dev --filter=web",
    "mobile:dev": "turbo run dev --filter=mobile",
    "admin:dev": "turbo run dev --filter=admin",
    "api:dev": "turbo run dev --filter=api",
    "build:prod:desktop": "NODE_ENV=production turbo run build:prod --filter=desktop",
    "build:prod:web": "NODE_ENV=production turbo run build:prod --filter=web",
    "build:prod:mobile": "NODE_ENV=production turbo run build:prod --filter=mobile",
    "build:test:desktop": "NODE_ENV=development turbo run build:test --filter=desktop",
    "build:test:web": "NODE_ENV=development turbo run build:test --filter=web",
    "build:test:mobile": "NODE_ENV=development turbo run build:test --filter=mobile",
    "tag:desktop": "bash scripts/create-tag.sh desktop",
    "tag:linux:snap": "bash scripts/create-tag.sh snap",
    "tag:linux:flatpak": "bash scripts/create-tag.sh flatpak",
    "tag:linux:aur": "bash scripts/create-tag.sh aur",
    "tag:linux:aur-bin": "bash scripts/create-tag.sh aur-bin",
    "tag:linux:ppa": "bash scripts/create-tag.sh ppa",
    "tag:linux:copr": "bash scripts/create-tag.sh copr",
    "tag:linux:obs": "bash scripts/create-tag.sh obs",
    "tag:linux:gentoo": "bash scripts/create-tag.sh gentoo",
    "tag:windows:winget": "bash scripts/create-tag.sh winget",
    "tag:windows:chocolatey": "bash scripts/create-tag.sh chocolatey",
    "tag:windows:scoop": "bash scripts/create-tag.sh scoop",
    "tag:macos:homebrew": "bash scripts/create-tag.sh homebrew",
    "tag:web": "bash scripts/create-tag.sh web",
    "tag:all": "bash scripts/create-tag.sh all",
    "tag:linux:all": "npm run tag:linux:snap && npm run tag:linux:flatpak && npm run tag:linux:aur && npm run tag:linux:aur-bin && npm run tag:linux:ppa && npm run tag:linux:copr && npm run tag:linux:obs && npm run tag:linux:gentoo",
    "tag:windows:all": "npm run tag:windows:winget && npm run tag:windows:chocolatey && npm run tag:windows:scoop",
    "tag:macos:all": "npm run tag:macos:homebrew",
    "icons:update": "bash scripts/update-icons.sh",
    "icons:generate": "cd apps/desktop && bun run tauri icon src-tauri/icons/my-new-icon.jpg",
    "version:bump": "bash scripts/bump-version.sh",
    "stats:check": "bash scripts/check-download-stats.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@sinclair/typebox": "^0.32.35",
    "turbo": "^2.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.1.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "@sinclair/typebox": "^0.34.0"
  }
}
