{
  "name": "grain-editor-monorepo",
  "private": true,
  "author": "Jeason",
  "description": "Grain（小麦）是一个功能强大的写作编辑器，专注于长文写作、知识管理和创意表达。",
  "email": "xiaomiquan@aliyun.com",
  "version": "0.1.90",
  "license": "MIT",
  "homepage": "https://github.com/jeasoncc/grain-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeasoncc/grain-editor.git"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:prod": "NODE_ENV=production turbo run build:prod",
    "build:test": "NODE_ENV=development turbo run build:test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check": "turbo run check",
    "clean": "turbo run clean",
    "desktop:dev": "turbo run dev --filter=desktop",
    "web:dev": "turbo run dev --filter=web",
    "mobile:dev": "turbo run dev --filter=mobile",
    "admin:dev": "turbo run dev --filter=admin",
    "api:dev": "turbo run dev --filter=api",
    "build:prod:desktop": "NODE_ENV=production turbo run build:prod --filter=desktop",
    "build:prod:web": "NODE_ENV=production turbo run build:prod --filter=web",
    "build:prod:mobile": "NODE_ENV=production turbo run build:prod --filter=mobile",
    "build:test:desktop": "NODE_ENV=development turbo run build:test --filter=desktop",
    "build:test:web": "NODE_ENV=development turbo run build:test --filter=web",
    "build:test:mobile": "NODE_ENV=development turbo run build:test --filter=mobile",
    "tag:desktop": "bash scripts/create-tag.sh desktop",
    "tag:snap": "bash scripts/create-tag.sh snap",
    "tag:web": "bash scripts/create-tag.sh web",
    "tag:linux": "bash scripts/create-tag.sh linux",
    "tag:all": "bash scripts/create-tag.sh all",
    "tag:help": "bash scripts/create-tag.sh help",
    "icons:update": "bash scripts/update-icons.sh",
    "icons:generate": "cd apps/desktop && bun run tauri icon src-tauri/icons/my-new-icon.jpg",
    "version:bump": "bash scripts/bump-version.sh",
    "stats:check": "bash scripts/check-download-stats.sh",
    "verify:install": "bash scripts/verify-install.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@playwright/test": "^1.57.0",
    "@sinclair/typebox": "^0.34.0",
    "playwright": "^1.57.0",
    "turbo": "^2.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.1.0"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "@sinclair/typebox": "^0.34.0"
  }
}
